	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff" href="{{ assets_dir }}/webfonts/opensans-regular.woff" />
	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff2" href="{{ assets_dir }}/webfonts/opensans-regular.woff2" />
	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff" href="{{ assets_dir }}/webfonts/opensans-italic.woff" />
	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff2" href="{{ assets_dir }}/webfonts/opensans-italic.woff2" />
	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff" href="{{ assets_dir }}/webfonts/opensans-bold.woff" />
	<link rel="preload" as="font" crossorigin="crossorigin" type="font/woff2" href="{{ assets_dir }}/webfonts/opensans-bold.woff2" />
