				'subnav': [
				{ 'text': 'Curabitur', 'url': '#', 'active_trail': 'true', 'submenu': [

					{ 'text': 'Parent page', 'url': '#', 'active': 'false', 'active_trail': 'true', 'submenu': [

						{ 'text': 'Grandchild page', 'url': '#', 'active': 'false', 'active_trail': 'true', 'submenu': [

							{ 'text': 'Great grandchild page', 'url': '#', 'active': 'true' }
						]},
