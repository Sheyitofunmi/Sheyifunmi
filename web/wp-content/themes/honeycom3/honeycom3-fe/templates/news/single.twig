{% extends function('function_exists', 'get_permalink') ? '@wp/scaffolding/base.twig' : '@hc/scaffolding/base.twig' %}

{% set nav_section = 'Post' %}
{% set hc3_fe_body_class = "single-post" %}

{% block main %}
	{% block hero_component %}
		{% include '@hc/components/hero.twig' with {
			'section_class': 'hero-outer',
			'image': '/assets/images/holder-1920x1080.png',
			'hero_title': 'News/blog single post title',
			'date': 'yesterday',
		} %}
	{% endblock hero_component %}

	{% block breadcrumb %}
