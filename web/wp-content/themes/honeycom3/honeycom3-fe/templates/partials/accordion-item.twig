{% block accordion %}
	{% if inline_title or inline_summary %}
		<div class="inline-header">
			{% if inline_title %}<h2 class="inline-header-title">{{ inline_title }}</h2>{% endif %}
			{% if inline_summary %}<p class="inline-header-summary">{{ inline_summary }}</p>{% endif %}
		</div>
	{% endif %}

	{% if twocol_accordion %}

	{% for accordion_col in accordion_cols %}
			{% if loop.index0 % 2 == 0 %}<div class="accordion-col">{% endif %}
			<div class="accordion">
				<div class="accordion-inner">
					{% set accordion = accordion_col.accordions %}
					{% for accordion in accordion_col.accordions %}
						<div class="accordion-item">
							<button class="accordion-button accordion-trigger" aria-expanded="false" aria-controls="accordion-panel-{{ accordion.title|replace({' ': '-'}) }}">
								{{ accordion.title }} <svg aria-hidden="true" class="icon"><use xlink:href="{{ assets_dir }}/svg/icons.svg#arrow-right"/></svg>
							</button>

							<div class="accordion-panel" aria-labelledby="accordion-button-{{ accordion.title|replace({' ': '-'}) }}" tabindex="-1">
								<div class="accordion-description content">{{ accordion.description|raw }}</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
			{% if loop.index0 % 2 == 1 or loop.last %}</div>{% endif %}

	{% endfor %}

	{% else %}
		<div class="accordion">
			<div class="accordion-inner">
				{% for accordion in accordions %}
					{% block accordion_item %}
						<div class="accordion-item">
							{% block accordion_title %}
								<button class="accordion-button accordion-trigger" aria-expanded="false" aria-controls="accordion-panel-{{ accordion.title|replace({' ': '-'}) }}">
									{{ accordion.title }} <svg aria-hidden="true" class="icon"><use xlink:href="{{ assets_dir }}/svg/icons.svg#arrow-right"/></svg>
								</button>
							{% endblock accordion_title %}

							{% block accordion_panel %}
								<div class="accordion-panel" aria-labelledby="accordion-button-{{ accordion.title|replace({' ': '-'}) }}" tabindex="-1">
									<div class="accordion-description content">{{ accordion.description|raw }}</div>
								</div>
							{% endblock accordion_panel %}
						</div>
					{% endblock accordion_item %}
				{% endfor %}
			</div>
		</div>
	{% endif %}

{% endblock accordion %}
